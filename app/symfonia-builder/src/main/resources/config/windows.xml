<?xml version="1.0" encoding="UTF-8"?>
<windows>
	<window id="welcome">
		<label id="caption">Willkommen!</label>
		<label id="description"></label>
		<button id="next">Weiter</button>
	</window>
	
	<window id="options">
        <label id="caption">Operation auswählen!</label>
        <label id="description">Wähle eine Aktion aus der Liste aus um fortzufahren!</label>
        <button id="option0">QSB zusammenstellen</button>
        <button id="option1">Dokumantation anzeigen</button>
        <button id="option2">Beispiele anzeigen</button>
        <button id="option3">Basisskripte exportieren</button>
        <button id="option4">QSB aktualisieren</button>
    </window>
    
    <window id="update">
        <label id="caption">Anwendung aktualisieren</label>
        <label id="description">Starte das automatische Update um eine neue Version zu erhalten. Nach Abschluss des Update ist ein Neustart der Anwendung notwendig!</label>
        <label id="master">Aktualisiere auf ein stabiles Release.</label>
        <label id="development">Aktualisiere auf den aktuellen Snapshot.</label>
        <button id="pull">Aktualisieren</button>
        <button id="back">Zurück</button>
    </window>
</windows>